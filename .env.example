# Area Manager Checklist App Configuration
# =========================================
# Copy this file to .env and fill in your values

# App Settings
APP_NAME=Area Manager Checklist
APP_URL=https://your-domain.com
REDIRECT_URI=https://your-domain.com/auth/callback
PORT=6060

# Azure AD
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# SQL Server
SQL_SERVER=localhost
SQL_DATABASE=GMRL_AMC
SQL_USER=sa
SQL_PASSWORD=your-password
SQL_ENCRYPT=false
SQL_TRUST_CERT=true

# Session
SESSION_SECRET=your-random-secret-key

# Admin Email (auto-approved as Admin)
ADMIN_EMAIL=admin@yourcompany.com

# SharePoint User Sync
SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/site
SHAREPOINT_GROUP_NAME=Your Group Name
